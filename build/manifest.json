{
    "manifest_version": 2,
    "name": "LevelDown's Streams Notifier",
    "version": "1.1",

    "description": "Une extension permettant de te notifier quand un de tes streamers favoris lance un stream sur LevelDown",
    "icons": {
        "128": "img/logo.png"
    },

    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "index.html"
    },

    "permissions": [
        "notifications",
        "http://leveldown.fr/*",
        "tabs"
    ],

    "author": "Balsakup",
    "background": {
        "scripts": [
            "js/jquery.min.js",
            "js/background.min.js"
        ]
    }
}
