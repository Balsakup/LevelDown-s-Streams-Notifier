{
    "manifest_version": 2,
    "name": "LevelDown's Streams Notifier",
    "version": "1.0.3",
    "update_url": "https://raw.githubusercontent.com/Balsakup/LevelDown-s-Streams-Notifier/master/updates.xml",

    "description": "Une extension permettant de te notifier quand un des tes streamers favoris lance un stream sur LevelDown",
    "icons": {
        "128": "img/logo.png"
    },

    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "index.html"
    },

    "permissions": [
        "notifications",
        "http://leveldown.fr/*",
        "tabs"
    ],

    "author": "Balsakup",
    "background": {
        "scripts": [
            "js/jquery.min.js",
            "js/background.min.js"
        ]
    }
}
